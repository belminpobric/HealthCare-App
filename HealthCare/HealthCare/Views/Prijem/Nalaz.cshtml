@model NalazDodajVM
@{
    ViewData["Title"] = "Kreiraj nalaz" ;
}
<h2>@ViewData["Title"]</h2>
<form asp-action="SnimiNalaz" method="post">
    <input type="hidden" asp-for="PacijentPrijem.Id" />
    <div class="form-group">
        <label asp-for="PacijentPrijem.Pacijent" class="font-weight-bold"></label>
        @Model.PacijentPrijem.Pacijent.Ime @Model.PacijentPrijem.Pacijent.Prezime
    </div>
    <div class="form-group">
        <label asp-for="DatumNalaza" class="font-weight-bold"></label>
        <input asp-for="DatumNalaza" class="form-control" style="width:300px" readonly>
    </div>
    <div class="form-group">
        <label asp-for="NalazOpis" class="font-weight-bold"></label>
        <textarea asp-for="NalazOpis" class="form-control" rows="5" style="width:500px"></textarea>
        <span asp-validation-for="NalazOpis"></span>
    </div>

    <br />
    <button type="submit" class="btn btn-primary">
        Snimi
    </button>
</form>
